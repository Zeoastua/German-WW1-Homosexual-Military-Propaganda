start = tale
tale = element tale {metadata, story}
metadata = element metadata {title, year, author, editor, translator, language, number}
title = element title {text}
year = element year {xsd:gYear}
author = element author {text}
editor = element editor {text}
translator = element translator {text}
language = element language {text}
number = element number {text}
story = element story {p+}
p = element p {mixed {(character|dialogue|action|stateofbeing)*}}
character = element character {child-status, marital-status, text}
child-status = attribute child-status {"mother" | "stepmother" | "grandmother" | "godmother" | "adopted"}
marital-status = attribute marital-status {"wife" | "widow" | "fiancee" | "divorcee"}
dialogue = element dialogue {speaker, stateofbeing, text}
speaker = attribute speaker {text}
action = element action {type, agent, receiver, text}
type = attribute type {text}
agent = attribute agent {text}
receiver = attribute receiver {text}
stateofbeing = attribute stateofbeing {text}

